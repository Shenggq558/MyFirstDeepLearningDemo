<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.qwer.myfirstdeeplearningdemo.Activity.PurchaseActivity">

    <TextView
        android:id="@+id/tvPurchaseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#de3a55"
        android:textStyle="bold"
        android:text="购买说明："/>

    <TextView
        android:id="@+id/tvPurchaseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseTitle"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:text="@string/purchase_description"/>

</RelativeLayout>
